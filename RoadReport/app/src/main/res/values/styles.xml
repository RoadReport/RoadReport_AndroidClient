<resources>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/darkTheme_colorBackground</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    
    <style name="Animation.Activity.Transition" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fragment_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/fragment_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/fragment_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/fragment_close_exit</item>
    </style>

    <!-- Light Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:fontFamily">@font/jf_openhuninn</item>-->
        <item name="activityTitleTextColor">@color/white</item>
        <item name="menuIconFillColor">@color/white</item>
<!--        <item name="colorControlNormal">@color/white</item>-->
        <item name="whiteOrBlack">@color/black</item>
        <item name="divLineBackground">@color/googleAppLightTheme_colorDivLine</item>
        <item name="tabLayoutBackground">@color/colorPrimary</item>
        <item name="eventCardBackground">@color/white</item>
        <item name="eventCardElevation">@dimen/eventCardElevation_lightTheme</item>
        <item name="editTextCardBackground">@color/grey200</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity.Transition</item>
        <item name="bottomSheetDialogTheme">@style/LightBottomSheetDialog</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="LightBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="behavior_draggable">false</item>
        <item name="bottomSheetStyle">@style/CommonBottomSheetDialogStyle</item>
    </style>

    <!-- Dark Theme -->
    <style name="DarkTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:fontFamily">@font/jf_openhuninn</item>-->
<!--        <item name="android:colorBackground">@color/googleAppDarkTheme_colorBackground</item>-->
<!--        <item name="colorSurface">@color/googleAppDarkTheme_colorBackground</item>-->
        <item name="whiteOrBlack">@color/white</item>
        <item name="divLineBackground">@color/googleAppDarkTheme_colorDivLine</item>
        <item name="tabLayoutBackground">@color/colorAccent_dark</item>
        <item name="eventCardBackground">@color/darkTheme_colorSurface</item>
        <item name="eventCardElevation">@dimen/eventCardElevation_darkTheme</item>
        <item name="editTextCardBackground">@color/darkTheme_colorSurface</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity.Transition</item>
        <item name="bottomSheetDialogTheme">@style/DarkBottomSheetDialog</item>
    </style>

    <style name="DarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkBottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="behavior_draggable">false</item>
        <item name="bottomSheetStyle">@style/CommonBottomSheetDialogStyle</item>
    </style>

    <style name="CommonBottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AuthUiLoginTheme" parent="FirebaseUI">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DivLine">
        <item name="android:background">?attr/divLineBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!--- Home Fragment -->
    <style name="RoadCard" />

    <style name="RoadCard.Card" parent="RoadCard">
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="RoadCard.Title" parent="RoadCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_double</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/roadCard_homeFrag_titleSize</item>
    </style>

    <style name="RoadCard.Subtitle" parent="RoadCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_double</item>
        <item name="android:textColor">@color/grey200</item>
        <item name="android:textSize">@dimen/roadCard_homeFrag_subtitleSize</item>
    </style>

    <style name="RoadCard.Image" parent="RoadCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_double_half</item>
        <item name="android:scaleType">fitEnd</item>
    </style>


    <!--- Account Fragment -->
    <!--    <style name="AboutItem" parent="@style/AdguardTextBody2">-->
    <style name="SettingsSectionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_double</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Live Cam Fragment -->
    <style name="AboutItem">
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/commonTextSize</item>
        <item name="android:gravity">start</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">@dimen/indent_normal</item>
        <item name="android:textColor">?attr/whiteOrBlack</item>
    </style>


    <style name="StyleRightCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/StyleRightCardViewCorner</item>
    </style>

    <style name="StyleRightCardViewCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Maps Fragment -->
    <style name="MapsFragmentBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MapsFragmentBottomSheet</item>
    </style>

    <style name="MapsFragmentBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/MapsFragmentShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="MapsFragmentShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>
